<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/dailog_tv_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_budget"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dailog_tv_budget"
        android:layout_toLeftOf="@id/dialog_budget_bt_yes">

        <EditText
            android:id="@+id/dialog_set_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyEditTextStyle"
            android:hint="@string/set_budget_hint"
            android:inputType="number"
            android:textSize="12sp">
            <requestFocus/>
        </EditText>

    </LinearLayout>



    <Button
        android:id="@+id/dialog_budget_bt_yes"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:background="@drawable/button_bg"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dailog_tv_budget"
       android:layout_marginBottom="6dp"
        android:text="@string/yes"
        android:textStyle="bold"
        android:textColor="@color/white"/>

</RelativeLayout>